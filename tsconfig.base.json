{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@nora/common": [
        "packages/common/src/index.ts"
      ],
      "@nora/db-prisma": [
        "packages/db-prisma/src/index.ts",
        "packages/db-prisma/node_modules/.prisma/client/index.d.ts"
      ]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ]
  }
}
