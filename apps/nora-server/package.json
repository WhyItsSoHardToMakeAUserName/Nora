{
  "name": "@nora/nora-server",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@nora/nora-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@nora/nora-server:build:development"
          },
          "production": {
            "buildTarget": "@nora/nora-server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/nora-server/Dockerfile . -t nora-nora-server"
      }
    }
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "nestjs-prisma": "^0.25.0"
  },
  "devDependencies": {
    "prisma": "^6.14.0"
  }
}
