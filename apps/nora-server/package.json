{
  "name": "@nora/nora-server",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "assets": [
            {
              "input": "apps/nora-server/src/features/mail-sender/templates",
              "glob": "**/!(*.ts)",
              "output": "./templates"
            }
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@nora/nora-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@nora/nora-server:build:development"
          },
          "production": {
            "buildTarget": "@nora/nora-server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/nora-server/Dockerfile . -t nora-nora-server"
      }
    }
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nora/common": "workspace:*",
    "@nora/db-prisma": "workspace:*",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "handlebars": "^4.7.8",
    "nestjs-prisma": "^0.25.0",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "node-loader": "^2.1.0",
    "prisma": "^6.14.0",
    "webpack": "^5.101.3"
  }
}
